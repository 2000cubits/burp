/var/log/burp {
        daily
        missingok
        rotate 7
        postrotate
		invoke-rd.d burp reload >/dev/null
        endscript
        compress
        notifempty
}

/var/log/burp-client {
        daily
        missingok
        rotate 7
        compress
        notifempty
}

/var/log/burp-bedup {
        daily
        missingok
        rotate 7
        compress
        notifempty
}
